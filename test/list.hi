-- vim: set ft=haskell

Vec4 :: Float -> Float -> Float -> Float -> Vec4 
Vec2 :: Float -> Float -> Vec2
extract_0 :: Vec2 ->  Float
extract_1 :: Vec2 ->  Float
index_int :: [Int] -> Int -> Int
index_float :: [Float] -> Int -> Float
map_f2f :: (Float -> Float) -> [Float] -> [Float]

add :: Float -> Float -> Float
add a b = a + b;

sub :: Float -> Float -> Float
sub a b = a - b;

f :: [Float]
f = [1.0, 2.0];

main :: Vec2 -> Vec4
main uv = Vec4 (extract_0 uv) (extract_1 uv) (add (extract_0 uv) (extract_1 uv)) (index_float f 0);
